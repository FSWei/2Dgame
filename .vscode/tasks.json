{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "game",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.cpp",
                "-o",
                //windows系统要加上.exe
                "${fileDirname}/exe/game.exe",
                //如果是linux系统，需要加上-lncurses
                // "${fileDirname}/exe/game",
                // "-lncurses"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}